sub lines_sub(name matrix, 
                int line_1, 
                int line_2, 
                int len) {

    for i = 0..(len - 1) {
        sub_value(matrix[line_1][i], matrix[line_1][i], matrix[line_2][i]);
    }
}

sub lines_sum(name matrix, 
                int line_1, 
                int line_2, 
                int len) {

    for i = 0..(len - 1) {
        sub_value(matrix[line_1][i], matrix[line_1][i], matrix[line_2][i]);
    }
}


